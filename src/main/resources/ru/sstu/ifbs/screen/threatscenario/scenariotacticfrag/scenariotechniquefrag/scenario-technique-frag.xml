<?xml version="1.0" encoding="UTF-8" standalone="no"?>
<fragment xmlns="http://jmix.io/schema/ui/fragment">
    <data>
        <instance id="techniqueDc" class="ru.sstu.ifbs.entity.storage.scenario.ScenarioTechnique"/>
    </data>
    <layout width="200px">
        <groupBox id="mainInfoBox" spacing="true">
            <label width="100%" id="header"/>
            <popupView id="descriptionPopup" minimizedValue="msg://descriptionPopup.caption">
                <vbox expand="description" width="300px">
                    <button id="deleteBtn" width="100%" icon="MINUS" caption="msg:///actions.Remove"/>
                    <label id="description" width="100%" dataContainer="techniqueDc" property="value.description"/>
                </vbox>
            </popupView>
        </groupBox>
    </layout>
</fragment>
